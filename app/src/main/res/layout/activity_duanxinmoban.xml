<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical"
    tools:context="com.wu.wucheng.xiaoli_wu.faxian.Duanxinmoban">
    <!--导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#DF1334"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/duanxinmoban_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="短信模板"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/duanxinmoban_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <RadioButton android:id="@+id/duanxinmoban_rb1"
            style="@style/duanxinmobanButton"
            android:checked="true"
            android:text="情礼情景" />

        <RadioButton android:id="@+id/duanxinmoban_rb2"
            style="@style/duanxinmobanButton"
            android:text="情礼对象" />

        <RadioButton android:id="@+id/duanxinmoban_rb3"
            style="@style/duanxinmobanButton"
            android:text="对象爱好" />

        <RadioButton android:id="@+id/duanxinmoban_rb4"
            style="@style/duanxinmobanButton"
            android:text="节目送礼" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/duanxinmoban_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    <!--<ListView-->
        <!--android:id="@+id/duanxinmoban_list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:divider="@null"-->
        <!--android:layout_height="match_parent">-->

    <!--</ListView>-->
</LinearLayout>

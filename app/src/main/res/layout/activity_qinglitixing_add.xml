<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical"
    tools:context="com.wu.wucheng.xiaoli_wu.faxian.QinglitixingAdd">
    <!--导航栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#DF1334"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qinglitixing_add_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="新建提醒"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/qinglitixing_add_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>
    <!--******************标题***********************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/qinglitixing_kuangline"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="标题"
            android:textSize="15sp" />

        <EditText android:id="@+id/qinglitixing_add_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/qinglitixing_kuangline"
            android:hint="请输入相关信息"
            android:textSize="15sp" />

    </LinearLayout>
    <!--******************日期***********************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/qinglitixing_kuangline"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="日期"
            android:textSize="15sp" />

        <EditText android:id="@+id/qinglitixing_add_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:background="@drawable/qinglitixing_kuangline"
            android:hint="请输入相关信息"
            android:textSize="15sp" />

    </LinearLayout>
    <!--******************重复***********************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/qinglitixing_kuangline"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="重复"
            android:textSize="15sp" />

        <EditText android:id="@+id/qinglitixing_add_repeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:background="@drawable/qinglitixing_kuangline"
            android:hint="请输入相关信息"
            android:textSize="15sp" />

    </LinearLayout>
    <!--******************提醒***********************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/qinglitixing_kuangline"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提醒"
            android:textSize="15sp" />

        <EditText android:id="@+id/qinglitixing_add_remind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/qinglitixing_kuangline"
            android:hint="请输入相关信息"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="您选择的相关人物是"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="相关人物"
        android:layout_gravity="center"
        android:background="@drawable/button_yuanjiao_red"
        android:textColor="#ffffff"/>

   <include android:id="@+id/qinglitixing_add_repeat_select_item"
       layout="@layout/qinglitixing_add_repeat_select_item"/>
</LinearLayout>

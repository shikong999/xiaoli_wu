<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:layout_height="80dp">
<Button
    android:layout_marginLeft="20dp"
    android:layout_width="120dp"
    android:layout_height="30dp"
    android:text="情礼方案提醒"
    android:textSize="15sp"
    android:background="@drawable/qinglitixing_yuanjiao_pink"
    android:textColor="#ffffff"
    />

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:src="@mipmap/qinglitixing_redline"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#DF1334"
            android:text="距离"/>
        <TextView android:id="@+id/qinglitixinf_list_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="提醒标题"/>
        <TextView android:id="@+id/qinglitixinf_list_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="还有0天"/>
    </LinearLayout>
    <Button android:id="@+id/qinglitixing_list_delete"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/button_yuanjiao_red"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="删除"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical"
    tools:context="com.wu.wucheng.xiaoli_wu.wode.WodeInfo">
    <!--************导航*****************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#DF1334"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wode_info_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:text="个人信息"
            android:textColor="#ffffff"
            android:textSize="15sp" />


    </LinearLayout>
    <!--************头像*****************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="头像"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/wode_info_touxiang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_more_hui" />
    </LinearLayout>
    <!--************昵称*****************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="昵称"
            android:textSize="15sp" />

        <TextView android:id="@+id/wode_info_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#A1A1A1"
            android:layout_marginRight="20dp"
            android:text="神尾观铃"/>
    </LinearLayout>
    <!--************生日*****************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="生日"
            android:textSize="15sp" />

        <EditText android:id="@+id/wode_info_birthday"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:focusable="false"
            android:background="#ffffff"
            android:textColor="#A1A1A1"
            android:text="2000/01/01"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_more_hui" />
    </LinearLayout>
    <!--************星座*****************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="星座"
            android:textSize="15sp" />

        <TextView android:id="@+id/wode_info_xingzuo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#A1A1A1"
            android:text="射手座"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_more_hui" />
    </LinearLayout>
    <!--************年龄*****************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="年龄"
            android:textSize="15sp" />

        <TextView android:id="@+id/wode_info_age"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#A1A1A1"
            android:layout_marginRight="20dp"
            android:text="16"/>
    </LinearLayout>
    <!--************性别*****************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="性别"
            android:textSize="15sp" />

        <TextView android:id="@+id/wode_info_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#A1A1A1"
            android:text="女"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_more_hui" />
    </LinearLayout>
    <!--************收货地址*****************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="收货地址"
            android:textSize="15sp" />

        <TextView android:id="@+id/wode_info_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#A1A1A1"
            android:layout_marginRight="20dp"
            android:text="日本 神奈川 翼人伝承协会"/>
    </LinearLayout>
    <!--************个人标签*****************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="个人标签"
            android:textSize="15sp" />

        <TextView android:id="@+id/wode_info_biaoqian_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#0E87E0"
            android:layout_marginRight="20dp"
            android:textSize="12sp"
            android:text="编辑标签"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="#ffffff"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/qinglitixing_yuanjiao_pink"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="标签1"/>
    </LinearLayout>

    <Button android:id="@+id/wode_info_edit"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/button_yuanjiao_red"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:text="提交个人信息"/>
</LinearLayout>

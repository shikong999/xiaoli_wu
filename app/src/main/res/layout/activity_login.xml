<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
    tools:context="com.wu.wucheng.xiaoli_wu.Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:text="手机号"/>
        <EditText
            android:id="@+id/login_mobile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_height="match_parent"
            android:hint="请输入所注册的手机号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:text="密码"/>
        <EditText
            android:id="@+id/login_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:inputType="textPassword"
            android:layout_height="match_parent"
            android:hint="请输入6-12位密码"/>
    </LinearLayout>

    <TextView android:id="@+id/forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="忘记密码"
        android:textColor="#fa0000"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <Button android:id="@+id/bt_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:background="#DF1334"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="登录"/>
        <Button android:id="@+id/zhuce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent"
            android:background="#DF1334"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="注册"/>
    </LinearLayout>
    <Button android:id="@+id/bt_suibiankankan"
        android:layout_width="150dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/suibiankk"
        android:textSize="20sp"
        android:textColor="#DF1334"
        android:gravity="center"
        android:text="随便看看"/>
</LinearLayout>
